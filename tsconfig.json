{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
   "filesGlob": [
    "./**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts",
    "!./tmp/*.ts"
  ],
   "exclude": [
    "typings/main.d.ts",
    "typings/main",
    "node_modules",
    "tmp"
  ]
}
